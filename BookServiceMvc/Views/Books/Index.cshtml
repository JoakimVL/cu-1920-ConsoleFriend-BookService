@model List<BookBasicDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Boeken</h1>

<div class="row">
	<div class="col-4">
		<ul class="list-group">
			@foreach(var bookbasic in Model)
			{
				<li class="list-group-item @(bookbasic.Title.Contains("C#") || bookbasic.Title.Contains(".Net") ? "list-group-item-success" : "")">
					<a asp-controller="Books"asp-action="Detail"asp-route-id="@bookbasic.Id">@bookbasic.Title</a>
					<em>(@bookbasic.Id)</em>
				</li>
			}
		</ul>
	</div>
</div>
